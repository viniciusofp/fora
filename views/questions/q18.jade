.question-wrapper.carousel-item.secao-1
	.question
		p.enunciado.red Na sua opinião, quem deve participar das decisões sobre os espaços públicos*?
		p.explain Pode marcar várias!
		.form-check-group.decisoes.row
			.col-sm-6
				.form-check
					input#prefeitura(type="checkbox", name="decisoes" value="Prefeitura")
					label(for="prefeitura") Prefeitura
				.form-check
					input#vereadores(type="checkbox", name="decisoes" value="Vereadores")
					label(for="vereadores") Vereadores
				.form-check
					input#especialistas(type="checkbox", name="decisoes" value="Especialistas técnicos")
					label(for="especialistas") Especialistas técnicos
				.form-check
					input#empresas(type="checkbox", name="decisoes" value="Empresas")
					label(for="empresas") Empresas
				.form-check
					input#ongs(type="checkbox", name="decisoes" value="ONGs")
					label(for="ongs") ONGs
			.col-sm-6
				.form-check
					input#movimentos-sociais(type="checkbox", name="decisoes" value="Movimentos Sociais")
					label(for="movimentos-sociais") Movimentos sociais
				.form-check
					input#associacoes-moradores(type="checkbox", name="decisoes" value="Associações de moradores")
					label(for="associacoes-moradores") Associações de moradores
				.form-check
					input#cidadaos-afetados(type="checkbox", name="decisoes" value="Cidadãos afetados pela decisão")
